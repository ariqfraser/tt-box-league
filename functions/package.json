{
    "name": "functions",
    "description": "Firebase Cloud Functions for tt-box-league",
    "main": "lib/index.js",
    "scripts": {
        "lint": "eslint .",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "serve": "npm run build && firebase emulators:start --only functions",
        "test:emulators": "firebase emulators:start --only functions,firestore,auth",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log"
    },
    "engines": {
        "node": "20"
    },
    "dependencies": {
        "firebase-admin": "^12.7.0",
        "firebase-functions": "^7.0.1"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "typescript": "^5.0.0"
    }
}
